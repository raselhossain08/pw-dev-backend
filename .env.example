# ===================================
# PERSONAL WINGS BACKEND CONFIGURATION
# ===================================
=
# Environment
NODE_ENV=development
=
# Server Configuration
PORT=3001
API_PREFIX=api
=
# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true
=
# Database Configuration
MONGODB_URI=mongodb://localhost:27017/personal-wings
DB_NAME=personal-wings
=
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
=
# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
=
# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_NAME=Personal Wings
FROM_EMAIL=noreply@personalwings.com
=
# Cloudinary Configuration (File Uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
=
# Stripe Payment Gateway
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
=
# PayPal Payment Gateway
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox
=
# OpenAI / ChatGPT Configuration (AI Bot)
# Get your API key from: https://platform.openai.com/api-keys
# Leave empty to use keyword-based fallback only
OPENAI_API_KEY=sk-your-openai-api-key-here
=
# Frontend URL (for email links, redirects)
FRONTEND_URL=http://localhost:3000
=
# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,video/mp4
=
# Session Configuration
SESSION_SECRET=your-session-secret-change-this
=
# Admin Configuration
ADMIN_EMAIL=admin@personalwings.com
ADMIN_PASSWORD=change-this-password
=
# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
=
# Logging
LOG_LEVEL=debug
=
# Redis (Optional - for caching and session storage)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
=
# AWS S3 (Alternative to Cloudinary - optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET_NAME=
AWS_REGION=us-east-1
=
# Webhook URLs
WEBHOOK_PAYMENT_SUCCESS_URL=
WEBHOOK_PAYMENT_FAILURE_URL=
=
# Social Authentication (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
=
# Two-Factor Authentication (Optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
=
# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_CHAT=true
ENABLE_NOTIFICATIONS=true
=
# Security
BCRYPT_ROUNDS=12
PASSWORD_RESET_EXPIRY=3600000
EMAIL_VERIFICATION_EXPIRY=86400000
=
# Pagination Defaults
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100
=
# Affiliate Program
AFFILIATE_COMMISSION_RATE=0.1
AFFILIATE_COOKIE_DURATION=30
=
# Course Settings
MAX_COURSE_ENROLLMENT=100
COURSE_COMPLETION_THRESHOLD=0.8
=
# Support Contact
SUPPORT_EMAIL=support@personalwings.com
SUPPORT_PHONE=+1-XXX-XXX-XXXX
